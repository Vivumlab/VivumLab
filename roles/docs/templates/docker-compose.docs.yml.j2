---
version: '3'

# This networks section required for the package to be visible to Traefik.
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: vivumlab_traefik

services:
  docs:
    image: awesometic/docusaurus:{{ docs.version }}
    restart: unless-stopped
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/docs/website:/docusaurus/website"
    environment:
      - UID=1000
      - GID=1000
      - AUTO_UPDATE=true
      - WEBSITE_NAME=website #Do not change
      - TEMPLATE=classic
      - RUN_MODE=development
    labels:
      - "traefik.http.services.docs.loadbalancer.server.scheme=http"
      - "traefik.http.services.docs.loadbalancer.server.port=80"
